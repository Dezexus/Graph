<UserControl x:Class="GraphApp.UserControls.EllipseWithNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphApp.UserControls"
             mc:Ignorable="d"
             x:Name="UControl"
             >
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Ellipse x:Name="Vertex" Width="50" Height="50"/>
        <TextBlock x:Name="VertexNumber" Text="1" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
